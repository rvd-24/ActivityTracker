{
    "manifest_version":2,
    "name":"ActivityTrackker",
    "version":"1.0",
    "content_scripts":[
        {
            "matches":[
                "<all_urls>"
            ],
            "js":["activitytracker/templates/content.js"]
        }
    ],
    "background":{
        "scripts":["activitytracker/templates/jquery-3.1.0.min.js","activitytracker/templates/background.js"]
    },
    "permissions":["tabs","serial","http://127.0.0.1:8000/","notifications","alarms"],
    "browser_action":{
        "default_icon":"activitytracker/templates/icon16.png",
        "default_popup":"activitytracker/templates/popup.html",
        "default_title":"A popup is displayed"
    },
    "content_security_policy": "script-src 'self' blob: filesystem:"
}